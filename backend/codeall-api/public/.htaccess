Options -Indexes
RewriteEngine On

# Se o arquivo ou pasta existir, nÃ£o reescreve
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Suporta /public/index.php/rota -> /public/index.php?route=rota
RewriteRule ^index\.php/(.*)$ index.php?route=$1 [QSA,L]

# Suporta /public/rota -> /public/index.php?route=rota
RewriteRule ^(.+)$ index.php?route=$1 [QSA,L]
